<%-include('header')-%>

    <div class="container-fluid  text-center center-div" id="login">
        <div class="container w-25 border py-5" id="form-block">
            <div class="title pb-5">
                <h2 class="font-weight-bold">Login</h2>
                <span>Log in for the existing user</span>
                <% if (locals.logout){ %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                      <%= logout %>
                    </div>
                    <% } %>
            </div>
            <form action="/login" method="POST">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="email" name="email">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="password">
                </div>
                <button type="submit" class="btn my-3 btn-primary rounded-pill">Submit</button>
            </form>
        </div>
    </div>

    <%-include('footer')-%>